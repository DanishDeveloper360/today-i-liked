{
  "name": "microui-project-template",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.html",
  "author": "Elsevier B.V.",
  "license": "ISC",
  "scripts": {
    "start": "webpack-dev-server --config webpack.config.local.js",
    "test": "DEBUG=false jest",
    "test:coverage": "npm test -- --coverage",
    "build": "webpack --config webpack.config.prod.js",
    "analyze": "npm run build && source-map-explorer 'dist/**/*.js'",
    "lint": "eslint . --ignore-path .gitignore"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "7.7.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "7.7.1",
    "@babel/preset-react": "^7.9.4",
    "@babel/runtime": "^7.9.2",
    "babel-eslint": "^10.0.3",
    "babel-loader": "8.0.6",
    "core-js": "^3.6.4",
    "css-loader": "^3.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "file-loader": "^4.2.0",
    "html-loader": "^1.1.0",
    "html-loader-jest": "^0.2.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "jest-css-modules": "^2.1.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "source-map-explorer": "^2.4.1",
    "style-loader": "^1.0.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@scopus/components": "^1.3.0",
    "@scopus/stylesheet": "^1.0.2",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint -- --fix"
    ]
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom-sixteen",
    "setupFilesAfterEnv": [
      "<rootDir>src/test/js/setupTests.js"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/node_modules/jest-css-modules"
    }
  },
  "scopus-cli": {
    "template": ""
  }
}
